@using AuctionWeb.Helpers;
@using AuctionWeb.Models;

@section view_title {
    Edit Description
}

@model EditDe

@section css {
    <link href="~/Assets/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
}

@section js {
    <script src="~/Assets/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/Assets/bootstrap-file-input/bootstrap.file-input.js"></script>
    <script src="~/Assets/tinymce/tinymce.min.js"></script>
    <script>
        $('.selectpicker').selectpicker();
        $('input[type=file]').bootstrapFileInput();
        tinymce.init({
            selector: '#txtDes',
            menubar: false,
            plugins: 'link image textcolor',
            encoding: "xml",
        });
    </script>
}

<form class="form-horizontal" method="post" action="" id="addProductForm" enctype="multipart/form-data">

    <textarea class="form-group" id="txtDes" placeholder="Description" name="Descriptionchanges">Edit[@Model.EditDate.Date] @ViewBag.raw</textarea>
    <div hidden><textarea class="form-group" id="txtDes" name="Description">@Model.Content</textarea></div>
    <div hidden><input type="text" class="form-group" name="ID" value="@Model.IDPro" /></div>
    <div hidden><input type="text" class="form-group" name="IDMain" value="@Model.ID" /></div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-check"></i>&nbsp;Save
            </button>
            <a href="@Url.Action("InTime","MProduct")" class="btn btn-success">
               <i class="fa fa-reply"></i>&nbsp;List of Products
            </a>
        </div>
    </div>   
</form>